{
  "name": "hugo-entracp",
  "version": "2.0.0",
  "description": "Hugo site for EntraCP project",
  "author": "Yvand",
  "license": "MIT",
  "scripts": {
    "create": "hugo new",
    "dev": "hugo server --bind=0.0.0.0 --disableFastRender --noHTTPCache",
    "format": "prettier **/** -w -c",
    "prebuild": "tsc -p ./ts_src",
    "build": "hugo --minify --gc",
    "preview": "vite preview --outDir public"
  },
  "dependencies": {
    "@tabler/icons": "^3.37.1",
    "@thulite/doks-core": "^1.9.3",
    "@thulite/images": "^3.3.4",
    "@thulite/inline-svg": "^1.2.2",
    "@thulite/seo": "^2.4.3",
    "thulite": "^2.6.5"
  },
  "overrides": {
      "minimatch": "^10.2.2",
      "glob": "^13.0.6"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/jquery": "^3.5.32",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=24.13.0"
  }
}
